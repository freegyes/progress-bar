{
    "name": "Progress Bar",
    "description": "Adds a progressbar to the top of the page",
    "version": "0.1",
    
    "permissions": [
      "tabs",
      "<all_urls>"
    ],

    "browser_action": {
        "default_icon": {
            "16": "/img/icon16.png",
            "48": "/img/icon48.png",
            "128": "/img/icon128.png"
        },
        "default_title": "Page Progress â€“ adds a progress bar to each website",
        "default_popup": "popup.html"
        },

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "exclude_matches": ["*://facebook.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
        }
    ], 
    "manifest_version": 2
}